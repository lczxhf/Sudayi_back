<% content_for :head do %>
<%= javascript_include_tag "jquery-1.8.2.min" %>
<script type="text/javascript">
  $(function(){
    
    $(".nav-tabs li").removeClass("active");
    $(".nav-tabs li :eq(2)").attr("class","active");
    $("#is_open").change(function(){
    	
    	$.get("/mobile_admin/store_manager/set_store_status",{store_id:$(this).next().val()},function(obj){
    		
    	},"json")
    })
  })
</script>
<% end %>
	<div >
		<ul class="nav nav-pills">
		  <li role="presentation" class="active"><a href="store?id=<%=@account._id%>"><span>列表 </span></a></li>
		  <li role="presentation"><a href="add_store?id=<%=@account._id%>"><span>添加 </span></a></li>
		</ul>
	</div>
	<br>
	<div style="background-color: #f5f5f5;border:1px  solid  #333333;">
	  	<table class="table">
	     <thead>
	       <tr>
	         <th>序号</th>
	         <th>仓库名</th>
	         <th>仓库地址</th>
	         <th>仓库限期</th>
	         <th>上架商品</th>
	         <th>共有商品</th>
	         <th>营业时间</th>
	         <th>当前状态</th>
	         <th>操作</th>
	      </tr>
	     </thead>
	     <tbody>
	     <% @stores.each_with_index do |store,index|%>
	       <tr>
	         <td><%=index+1%></td>
	         <td><%=store.name%></td>
	         <td><p style="font-weight:bold;"><%=store.store_address.node.name%></p><%=store.store_address.detail.name%></td>
	         <td><%=store.store_info.end_date.strftime("%Y%m%d")%></td>
	         <td>300</td>
	         <td>800</td>
	         <td><%=store.store_info.open_time_begin_day%>-<%=store.store_info.open_time_end_day%></td>
	         <td>

	            <label></label>
	            <select id="is_open">
	            <!--   <input type="hidden" value="<%=store._id%>"/> -->
	              <option value="上架中">上架中</option>
	              <%if !store.is_open%>
	              <option value="已下架" selected="selected">已下架</option>
	              <%else%>
	              <option value="已下架" >已下架</option>
	              <%end%>
	            </select>
				<input type="hidden" value="<%=store._id%>" />
	         </td>
	         <td>
	         	<ul class="list-inline">
					<li><a href="">申请延期</a></li>
					<li><a href="">管理商品</a></li>
					<li><a href="">删除仓库</a></li>
					<li><a href="">上传商品</a></li>
				</ul>
	         </td>
	       </tr>
	       <%end%>
	      
	     </tbody>
	    </table>
	</div>
