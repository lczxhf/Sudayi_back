<% error = @product_store.errors.include?(:product_detail_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :product_detail_id, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :product_detail_id, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:product_detail_id) : "Ex: a simple text" %></span>
  </div>
</fieldset>
