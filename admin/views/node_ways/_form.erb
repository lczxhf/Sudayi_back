<% error = @node_way.errors.include?(:node_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :node_id, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :node_id, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:node_id) : "Ex: a simple text" %></span>
  </div>
</fieldset>
