<% error = @address.errors.include?(:country_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :country_id, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :country_id, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:country_id) : "Ex: a simple text" %></span>
  </div>
</fieldset>
