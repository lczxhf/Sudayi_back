<ul class="nav nav-tabs">
  <li> <%= link_to tag_icon(:list, pat(:list)), url(:details, :index) %></li>
  <li> <%= link_to tag_icon(:plus, pat(:new)), url(:details, :new) %></li>
  <li class="active"> <%= link_to tag_icon(:edit, pat(:edit)), url(:details, :edit, :id => @detail.id) %></li>
</ul>
<div class="tabs-content">
  <% form_for :detail, url(:details, :update, :id => @detail.id), :method => :put, :class => 'form-horizontal' do |f| %>
