<% error = @error_info.errors.include?(:message) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :message, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :message, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:message) : "Ex: a simple text" %></span>
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:error_infos, :index), :class => 'btn btn-default' %>
</div>