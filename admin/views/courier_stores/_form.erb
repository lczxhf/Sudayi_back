<% error = @courier_store.errors.include?(:courier_account_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :courier_account_id, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :courier_account_id, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:courier_account_id) : "Ex: a simple text" %></span>
  </div>
</fieldset>
